<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:p="http://www.w3.org/ns/xproc"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               xmlns:html="http://www.w3.org/1999/xhtml"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal">
  
  <x:script>
    <p:declare-step type="pxi:transform" version="1.0">
      <p:input port="source"/>
      <p:output port="result"/>
      <p:option name="temp-dir" required="true"/>
      <p:option name="stylesheet"/>
      <p:import href="http://www.daisy.org/pipeline/modules/braille/common-utils/library.xpl"/>
      <p:import href="http://www.daisy.org/pipeline/modules/braille/css-utils/library.xpl"/>
      <css:inline/>
      <px:transform query="(input:css)(output:pef)(formatter:dotify)(translator:celia)(locale:fi)">
        <p:with-option name="temp-dir" select="$temp-dir"/>
      </px:transform>
    </p:declare-step>
  </x:script>
  
  <!--
      All caps, for early primary education. No hyphenation.
  -->
  <x:scenario label="letter spacing, type 1">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <html xmlns="http://www.w3.org/1999/xhtml">
            <head>
              <style type="text/css">
                @page { size: 22 10 }
                head { display: none }
                body {
                  word-spacing: 3;
                  letter-spacing: 1;
                  hyphens: none; }
                p { display: block; text-indent: 0; }
              </style>
            </head>
            <body>
              <p>enni ui</p>
              <p>onni ui</p>
            </body>
          </html>
        </x:document>
      </x:input>
      <x:option name="temp-dir" select="$temp-dir"/>
    </x:call>
    <x:context label="pef">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="custom" href="http://www.daisy.org/pipeline/modules/braille/pef-utils/library.xpl" step="x:pef-compare">
      <x:document type="inline">
        <pef xmlns="http://www.daisy.org/ns/2008/pef" version="2008-1">
          <head>
            <meta xmlns:dc="http://purl.org/dc/elements/1.1/">
              <dc:format>application/x-pef+xml</dc:format>
            </meta>
          </head>
          <body>
            <volume cols="22" rows="10" rowgap="0" duplex="true">
              <section>
                <page>
                  <row>⠑⠀⠝⠀⠝⠀⠊⠀⠀⠀⠥⠀⠊</row>
                  <row>⠕⠀⠝⠀⠝⠀⠊⠀⠀⠀⠥⠀⠊</row>
                </page>
              </section>
            </volume>
          </body>
        </pef>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <!--
       Pre-hyphenated, with majuscules and minuscules. No hyphenation.
  -->
  <x:scenario label="letter spacing, type 2">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <html xmlns="http://www.w3.org/1999/xhtml">
            <head>
              <style type="text/css">
                @page { size: 22 10 }
                head { display: none }
                body {
                  word-spacing: 3;
                  letter-spacing: 1;
                  hyphens: none; }
                p { display: block; text-indent: 0; }
              </style>
            </head>
            <body>
              <p>En-&#x200B;ni lau-&#x200B;laa. On-&#x200B;ni ui.</p>
              <p>Luo-&#x200B;kas-sa on 3 las-&#x200B;ta.</p>
            </body>
          </html>
        </x:document>
      </x:input>
      <x:option name="temp-dir" select="$temp-dir"/>
    </x:call>
    <x:context label="pef">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="custom" href="http://www.daisy.org/pipeline/modules/braille/pef-utils/library.xpl" step="x:pef-compare">
      <x:document type="inline">
        <pef xmlns="http://www.daisy.org/ns/2008/pef" version="2008-1">
          <head>
            <meta xmlns:dc="http://purl.org/dc/elements/1.1/">
              <dc:format>application/x-pef+xml</dc:format>
            </meta>
          </head>
          <body>
            <volume cols="22" rows="10" rowgap="0" duplex="true">
              <section>
                <page>
                  <row>⠠⠑⠀⠝⠀⠤⠀⠝⠀⠊</row>
                  <row>⠇⠀⠁⠀⠥⠀⠤⠀⠇⠀⠁⠀⠁⠄</row>
                  <row>⠠⠕⠀⠝⠀⠤⠀⠝⠀⠊⠀⠀⠀⠥⠀⠊⠄</row>
                  <row>⠠⠇⠀⠥⠀⠕⠀⠤⠀⠅⠀⠁⠀⠎⠀⠤⠀⠎⠀⠁</row>
                  <row>⠕⠀⠝⠀⠀⠀⠼⠉</row>
                  <row>⠇⠀⠁⠀⠎⠀⠤⠀⠞⠀⠁⠄</row>
                </page>
              </section>
            </volume>
          </body>
        </pef>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <!--
      Literate braille learner's books. Hyphenation allowed.
  -->
  <x:scenario label="letter spacing, type 3">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <html xmlns="http://www.w3.org/1999/xhtml">
            <head>
              <style type="text/css">
                @page { size: 22 10 }
                head { display: none }
                body {
                  word-spacing: 3;
                  letter-spacing: 1;
                  hyphens: auto; }
                p { display: block; text-indent: 0; }
              </style>
            </head>
            <body>
              <p>Läpi näkyy, lämpimän pitää?</p>
              <p>Hinta on 30 markkaa.</p>
            </body>
          </html>
        </x:document>
      </x:input>
      <x:option name="temp-dir" select="$temp-dir"/>
    </x:call>
    <x:context label="pef">
      <x:document type="port" port="result"/>
